<?
function daysLeft($amt, $cap = false) {
	$s = round($amt);
	if ($s < 1) 
	  $s = ($cap) ? 'Zero days' : 'zero days';
	else if ($s == 1)
		$s .= ' day';
	else 
		$s .= ' days';
	return $s;
}
