<?php 
function getLoginLabel() {
  switch (substr($_SERVER['HTTP_HOST'], 0, 5)) {
    case 'local':
      return "<span style='color:red'>Clicktate 4.0</span> ";
    case 'test.':
      return "<span style='color:orange'>Test Login</span> ";
    default:
      return 'Clicktate 4.0';
  }
  return ' ';
}
