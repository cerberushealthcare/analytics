  <script>
  
  function CheckTrial(theform) {
  
  var cctype = theform.CardType.options[theform.CardType.selectedIndex].value;
  
  if (theform.name.value=="") {
     alert('Please enter cardholder name.');
     theform.name.focus();
     return false;
  }
  if (theform.address1.value=="") {
     alert('Please enter address line 1.');
     theform.address1.focus();
     return false;
  }
  if (theform.city.value=="") {
     alert('Please enter a city.');
     theform.city.focus();
     return false;
  }
  if (theform.state.value=="") {
     alert('Please enter a state.');
     theform.state.focus();
     return false;
  }
  if (theform.zipcode.value=="") {
     alert('Please enter a zipcode.');
     theform.zipcode.focus();
     return false;
  }
  if (theform.cardnum.value=="") {
     alert('Please enter a cardnumber.');
     theform.zipcode.focus();
     return false;
  }
  
  if (cctype == "2") {
        // Visa: length 16, prefix 4, dashes optional.
        var re = /^4\d{3}-?\d{4}-?\d{4}-?\d{4}$/;
     } else if (cctype == "1") {
        // Mastercard: length 16, prefix 51-55, dashes optional.
        var re = /^5[1-5]\d{2}-?\d{4}-?\d{4}-?\d{4}$/;
     } else if (cctype == "Disc") {
        // Discover: length 16, prefix 6011, dashes optional.
        var re = /^6011-?\d{4}-?\d{4}-?\d{4}$/;
     } else if (cctype == "3") {
        // American Express: length 15, prefix 34 or 37.
        var re = /^3[4,7]\d{13}$/;
     } else if (type == "Diners") {
        // Diners: length 14, prefix 30, 36, or 38.
        var re = /^3[0,6,8]\d{12}$/;
     }
  if (!re.test(theform.cardnum.value)) {
     alert('Please enter a valid cardnumber.');
     theform.cardnum.focus();
     return false;
  }
  
  return true;
  }
  
  var submitting = false;
  function submit() {
    if (! submitting) {
      showWorking('Submitting billing information', false, true);
      submitting = true;
      setTimeout("submitMe()", 100);
    }
  }
  function submitMe() {
    frm.submit();
  }
  function cancel() {
    window.location = "profile.php?m=-1";
  }
  </script>
  
