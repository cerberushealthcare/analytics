<script type='text/javascript'>
<? if (isset($g_cp)) { ?>
showPop("pop-cp", "pop-cp-pw");
<? } ?>
<? if (isset($g_timeout)) { ?>
    alert("We're sorry, but your session has timed out from inactivity.");
