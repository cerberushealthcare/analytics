<?php
/**
 * HL7 value
 */
class HL7Value extends HL7Rec {
  //
  public $_value;  // original field value
  //
  public function __construct($value) {
    $this->_value = $value;
  }
}
/**
 * HL7 component-delimited value
 */
class HL7CompValue extends HL7Value {
  //
  /**
   * @param string $value
   * @param ST_EncodingChars $encoding 
   * @return HL7Value
   */
  public function __construct($value, $encoding) {
    $this->_value = $value;
    $this->setValues(self::decode($value, $encoding), $encoding);
  }
  //
  protected static function isFid($var, $c1) {
    return parent::isFid($var, $c1) && ! self::isUpper($c1);
  }
  protected static function decode($value, $encoding) {  // ['value',..]
    if ($encoding) {
      $a = explode($encoding->compDelim, $value);
      if (count($a) > 1)
        return $a;
      return explode($encoding->subDelim, $value);
    } else {
      return array($value);
    }
  }
}
/**
 * Coded Entry
 */
class CE extends HL7CompValue {
  public $id;
  public $text;
  public $codingSystem;
  public $altId;
  public $altText;
  public $altCodingSystem;  
}
/**
 * Time Stamp
 */
class TS extends HL7CompValue {
  public $time;
  public $precision;
}
/**
 * Timing Quantity
 */
class TQ extends HL7CompValue {
  public $qty;  // CQ
  public $interval;  // RI
  public $duration;
  public $start;  // TS
  public $end;  // TS
  public $priority;
  public $cond;
  public $text;
  public $conj;
  public $orderSeq;  // OSD
  public $occurDuration;  // CE
  public $occurTotal;   
}
/**
 * Extended Address 
 */
class XAD extends HL7CompValue {
  public $addr1;
  public $addr2;
  public $city;
  public $state;
  public $zip;
}
/**
 * Extended Composite Name And Number For Persons 
 */
class XCN extends HL7CompValue {
  public $id;
  public $familyName;  // FN
  public $givenName;
  public $secondName;
  public $suffix;
  public $prefix;
  public $degree;
  public $source;
  public $assignAuth;  // HD
  public $nameType;
  public $idCheckDigit;
  public $checkDigitScheme;
  public $idTypeCode;
  public $assignFacility;  // HD
  public $nameRepresentCode;
  public $nameContext;  // CE
  public $nameValidityRange;  // DR
  public $nameAssembly; 
  public $effective;  // TS
  public $expiration;  // TS
  public $profSuffix;
  public $assignJurisdic;  // CWE
  public $assignAgency;  // CWE
}
/**
 * Extended Organization Name
 */
class XON extends HL7CompValue {
  public $name;
  public $typeCode;
  public $id;
  public $checkDigit;
  public $checkDigitScheme;
  public $assignAuth;  // HD
  public $idTypeCode;
  public $assignFacility;  // HD
  public $nameRepresentCode;
  public $orgId;
}
/**
 * Extended Person Name
 */
class XPN extends HL7CompValue {
  public $last;
  public $first;
  public $middle;
  public $suffix;
  public $prefix;
}
